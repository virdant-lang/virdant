mod Lfsr {
    incoming clock : Clock;
    incoming reset : Bit;
    outgoing out : Word[8];

    node taps : Word[8];
    taps := 29w8;

    reg r : Word[8] on clock;
    r <= if reset {
        255w8
    } else {
        cat(r[7..0], 0w1)->xor(if feedback { taps }  else { 0w8 })
    };

    out := r;

    node feedback : Bit;
    feedback := r[7];

    reg s : Word[4] on clock;
    s <= if reset {
        1
    } else {
        cat(s[3..0], s[3])
    };
}
